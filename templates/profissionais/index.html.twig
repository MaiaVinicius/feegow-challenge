{% extends 'base.html.twig' %}

{% block title %}Buscar Profisisonal{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1>Selecionar Profissional</h1>
    </div>

    <div class="form-group">
        <label for="especialidade">Especialidade:</label>
        <select name="especialidade" id="especialidade" class="form-control">
            <option value="">Selecione</option>
            {% for especialidade in especialidades %}
                <option value="{{ especialidade.especialidade_id }}">
                    {{ especialidade.nome }}
                </option>
            {% endfor %}
        </select>
    </div>

    <output id="cards-profissionais" class="row no-gutters"></output>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/profissionais/scripts.js') }}" type="module"></script>
{% endblock %}